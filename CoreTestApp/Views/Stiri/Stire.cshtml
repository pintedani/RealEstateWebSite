                        <a href="@StiriUrls.BuildStirePageUrl(Model.StireUrmatoare)">
                            <div>
                                @if (!string.IsNullOrEmpty(@Model.StireUrmatoare.Poze))
                                {
                                    <div class="col-sx-4">
                                        <img src="../../Images/Stiri/@Model.StireUrmatoare.Poze.Split(';')[0]" style="width: 100px; display: inline-block" />
