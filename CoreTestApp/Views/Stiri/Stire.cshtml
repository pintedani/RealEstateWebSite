                                @if (!string.IsNullOrEmpty(@Model.StireAnterioara.Poze))
                                {
                                    <div class="col-sx-4">
                                        <img src="../../Images/Stiri/@Model.StireAnterioara.Poze.Split(';')[0]" style="width: 100px; display: inline-block" />
