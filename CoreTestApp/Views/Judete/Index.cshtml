@model IEnumerable<Imobiliare.Entities.Judet>

@{
    ViewBag.Title = "Index";
    Layout = "_LayoutB4";
}

@Html.Partial("_MenuSuperAdmin")

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrescurtareAuto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoordinateGps)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descriere)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrescurtareAuto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoordinateGps)
        </td>
        <td>
            @if (item.Descriere != null)
            {
                if (item.Descriere.Length < 270)
                {
                    @item.Descriere;
                }
                else
                {
                    @Html.Raw(item.Descriere.Substring(0, 270))
                    @:...
                                                                           }
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
