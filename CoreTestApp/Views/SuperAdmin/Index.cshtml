        <option value="0">--Toate--</option>
        @foreach (var oras in Model.Orases)
        {
            if (Model.ImobilFilter.OrasId == oras.Id)
            {
                <option selected value="@oras.Id">@oras.Nume</option>
            }
            else
            {
                <option value="@oras.Id">@oras.Nume</option>
            }            
        }
