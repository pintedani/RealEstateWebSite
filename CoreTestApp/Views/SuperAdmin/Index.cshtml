            $("#adresaEmailTip").append(o1);

            var o = new Option(user, user);
            /// jquerify the DOM object 'o' so we can use the html method
            $(o).html(user);
            $("#adresaEmailTip").append(o);

            //FormatFinalMesaj();
            $("#emailConfirmareAnuntEmail").val($("#adresaEmailTip").val());
        }
