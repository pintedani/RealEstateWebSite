  <div class="col-md-10" style="margin-top: 20px; padding-left: 5px; padding-right: 5px">

    <h1 style="margin-bottom: 5px">@Model.Ansamblu.Titlu</h1>
    <!-- Place this tag where you want the share button to render. -->
    <div class="g-plus" data-action="share" data-annotation="bubble"></div>
    <br />
    <div class="fb-share-button" data-layout="button_count"></div>
    <hr style="margin-top: 5px" />

    @if (!string.IsNullOrEmpty(Model.Ansamblu.Poze))
    {
      <div>
        <img style="width: 100%" src="/Images/AnsambluriRezidentiale/@Model.Ansamblu.Poze.Split(';')[0]" />
      </div>
    }
    <hr />
