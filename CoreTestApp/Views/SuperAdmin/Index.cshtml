        <input class="datepickerDate" name="LogEndDate" value="@(Model.ImobilFilter.PerioadaEnd == DateTime.MinValue ? "" : Model.ImobilFilter.PerioadaEnd.ToString("dd'/'MM'/'yyyy"))" type="text" size="10" style="width: 95px" />
