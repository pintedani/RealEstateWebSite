@model IEnumerable<Imobiliare.Entities.EmailTemplate>
           
@Html.Partial("_MenuSuperAdmin")

@{
    ViewBag.Title = "Edit Emails";
}

<br/>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HumanReadableEmailIdentifier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titlu)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Mesaj)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.DateModified)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.EmailTemplateCategory)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr onclick="window.location='@Url.Action("Details", new {id = item.Id})'" style="cursor: pointer">
        <td>
            @Html.DisplayFor(modelItem => item.HumanReadableEmailIdentifier)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titlu)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Mesaj)
        </td>*@
        <td>
            @item.DateCreated.ToShortDateString()
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.DateModified)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.EmailTemplateCategory)
        </td>
        <td>
          <div class="btn-group">
            <a class="btn btn-success" href="@Url.Action("Edit", "EmailTemplate", new {id = item.Id})"><span class="glyphicon glyphicon-pencil"></span></a>
            <a class="btn btn-danger" href="@Url.Action("Delete", "EmailTemplate", new {id = item.Id})" onclick="return confirm('Sunteti sigur ca doriti sa stergeti permanent emailul?')"><span class="glyphicon glyphicon-trash"></span></a>
          </div>
        </td>
    </tr>
}

</table>
