                    <select class ="combobox" style="margin: 5px">
                        <option>@observatii.Length - @observatii.Last().Truncate(45)</option>
                        @foreach (var judet in observatii)
                        {
                            <option value="@judet">@judet</option>
                        }
                    </select>
                }
            </div>
