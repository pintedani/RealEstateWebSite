@using Imobiliare.Entities
@using Imobiliare.UI.BusinessLayer
@using Imobiliare.UI.Utils.UrlSeoFormatters
@using System.Web;
@using Microsoft.AspNetCore.Http.Extensions
@model Imobiliare.UI.Models.AnsambluRezidentialViewModel

@{
  string formattedTitle = HttpUtility.HtmlDecode(HtmlHelpers.RemoveSpecialCharacters(Model.Ansamblu.Titlu, ' ', false));
  ViewBag.Title = formattedTitle;

  ViewBag.MetaDescription = formattedTitle;

  if (@Model.Ansamblu.Keywords != null)
  {
    ViewBag.Keywords = Model.Ansamblu.Keywords;
  }

  ViewBag.ShareUrl = Context.Request.GetDisplayUrl();
  ViewBag.ShareTitle = formattedTitle;
  ViewBag.ShareDescription = formattedTitle;
  if (!string.IsNullOrEmpty(Model.Ansamblu.Poze))
  {
    ViewBag.ShareImage = "http://www.apartamente24.ro/Images/AnsambluriRezidentiale/" + Model.Ansamblu.Poze.Split(';')[0];
  }
  else
  {
    ViewBag.ShareImage = "http://www.apartamente24.ro/Images/imobiliare2.jpg";
  }
  ViewBag.ShareImageHeight = 480;
  ViewBag.ShareImageWidth = 640;
}

<div id="fb-root"></div>
